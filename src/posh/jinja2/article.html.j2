{% extends "base.html.j2" %}
{% block wholebody %}
{% set author = Item.attribution|selectattr("role", "author") or _site.attribution|selectattr("role", "author") %}
<div class="block-group header">
    <header class="block">
    <nav>
    </nav>
    </header>
</div>

<div class="block-group main">
    <main class="block">
        <article class="h-entry">
            <div class="e-content">
                {{ Item_Page_Article.body | safe }}
            </div>
            <footer class="article-meta">
                <p class="p-meta">
                    By <span class="p-author">{{ author.name }}</span> on <time class="dt-published">{{ Item.published[:10] }}</time>
                </p>
            </footer>
        </article>
    </main>

    <aside class="block sidebar">
    </aside>
</div>

